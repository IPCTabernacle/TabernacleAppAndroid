<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/podcast_cover_image"
            android:src="@mipmap/podcast_cover"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/podcast_date"
            android:layout_toRightOf="@+id/podcast_cover_image"
            android:layout_marginLeft="16dp"
            android:textSize="10dp"
            android:text="Date"
            android:textAllCaps="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/podcast_title"
            android:layout_toRightOf="@+id/podcast_cover_image"
            android:layout_below="@id/podcast_date"
            android:text="Bible Study - January 3rd, 2016"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/podcast_duration"
            android:layout_above="@id/podcast_title"
            android:layout_alignParentRight="true"
            android:text="30:00"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/podcast_description"
            android:layout_below="@+id/podcast_cover_image"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/podcast_description"
            android:id="@+id/play_episode_button"
            android:layout_centerHorizontal="true"
            android:text="Play Episode"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
